/*******************************
        Global Overrides
*******************************/

body {
	-webkit-font-smoothing: antialiased;
}

#string {

/*-------------------
      Container
--------------------*/

	.container {
		position: absolute;
		left: 50%;
		top: 50%;
		padding: 2em;
		transition: all 0.5s ease;
		-webkit-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
		width: 1000px;

		@media only screen and (max-width: @widescreenMonitorBreakpoint) and (min-width: @largeMonitorBreakpoint) {
			width: 1000px;
		}

		@media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
			width: 850px;
		}

		@media only screen and (max-width: @computerBreakpoint) and (min-width: @tabletBreakpoint) {
			width: 700px;
		}

		@media only screen and (max-width: @tabletBreakpoint) and (min-width: @mobileBreakpoint) {
			width: 600px;
		}

		@media only screen and (max-width: @mobileBreakpoint) {
			width: 100%;
		}
	}


/*-------------------
       Page
--------------------*/
	
	.page {
		padding: 0em;
	}


/*-------------------
       Parallax
--------------------*/

	.parallax {
		perspective: 300px;
		height: 100vh;
		overflow-x: hidden;
		overflow-y: auto;
	}

	.parallax__layer {
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
	}

	.parallax__layer--fore {
		-webkit-transform: translateZ(90px) scale(.7);
		transform: translateZ(90px) scale(.7);
		z-index: 1;
	}

	.parallax__layer--base {
		-webkit-transform: translateZ(0);
		transform: translateZ(0);
		z-index: 4;
	}

	.parallax__layer--back {
		-webkit-transform: translateZ(-300px) scale(2);
		transform: translateZ(-300px) scale(2);
		z-index: 3;
	}

	.parallax__group {
		position: relative;
		height: 100vh;
		-webkit-transform-style: preserve-3d;
		transform-style: preserve-3d;
		-webkit-transition: -webkit-transform 0.5s;
		transition: transform 0.5s;
	}	

/*-------------------
       BG Dots
--------------------*/

	.string-bg-dots {
		position: absolute;
		background: url(themes/string/assets/background_dots.png) no-repeat center center;
		width: 500px;
		height: 500px;
		position: absolute;
		z-index: -1;
		opacity: 0.4;
		transition: all 0.5s ease;

		@media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
			width: 300px;
			height: 300px;
			-webkit-background-size: 300px;
			-moz-background-size: 300px;
			-o-background-size: 300px;
			background-size: 300px;
		}

		@media only screen and (max-width: @computerBreakpoint) {
			display: none;
		}

		&.left {
			top: 0;
			left: 0;
	        -moz-transform: scaleX(-1);
	        -o-transform: scaleX(-1);
	        -webkit-transform: scaleX(-1);
	        transform: scaleX(-1);
	        filter: FlipH;
	        -ms-filter: "FlipH";

			&.bottom {
				top: initial;
				bottom: 0;
				-moz-transform: scaleX(-1) scale(1,-1); 
				-o-transform: scaleX(-1) scale(1,-1); 
				-webkit-transform: scaleX(-1) scale(1,-1); 
				transform: scaleX(-1) scale(1,-1);
			}
		}

		&.right {
			top: 0;
			right: 0;

			&.bottom {
				top: initial;
				bottom: 0;
				-moz-transform: scale(1,-1); 
				-o-transform: scale(1,-1); 
				-webkit-transform: scale(1,-1); 
				transform: scale(1,-1);
			}
		}
	}

/*-------------------
       Intro
--------------------*/

/* Base */

	#group1 {
		z-index: 3;
		text-align: center;

		.logo {
			margin-bottom: 5em;

			img {
				vertical-align: middle;
			}

			.string-txt {
				padding: 20px 0 0 25px;
				height: 100px;
			}

		}


		.intro-txt {
			color: @white;

			img {
				text-align: center;
				margin: 0 0 2rem 50%;
				-webkit-transform: translate(-50%, 0);
				transform: translate(-50%, 0);

			}

			p {
				text-align: center;
				line-height: 1.4em;
			}

			.intro-pad {
				margin-bottom: 5rem;

				h1, h2 {
					margin: 0;
				}
			}
		}

/* Back */

