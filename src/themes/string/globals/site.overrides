		}
	}


/*-------------------
       Video
--------------------*/

	#group2 {
		z-index: 4;
		text-align: center;

		.parallax__layer--base {
			background: @darkblue;
			-webkit-box-shadow: 0px -0px 20px 2px rgba(33,51,59,0.5);
			-moz-box-shadow: 0px -0px 20px 2px rgba(33,51,59,0.5);
			box-shadow: 0px -0px 20px 2px rgba(33,51,59,0.5);
		}

		.parallax__layer--base::after {
			content: "";
			background: url(themes/string/assets/video_background.jpg) no-repeat center center;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
			opacity: 0.8;
			top: 0;
			left: 0;
			bottom: 0;
			right: 0;
			position: absolute;
			z-index: -1;
		}

		.container {
			width: 1100px;

			// @media only screen and (max-width: @widescreenMonitorBreakpoint) and (min-width: @largeMonitorBreakpoint) {
			// 	width: 1100px;
			// }

			@media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
				width: 900px;
			}

			@media only screen and (max-width: @computerBreakpoint) and (min-width: @tabletBreakpoint) {
				width: 700px;
			}

			@media only screen and (max-width: @tabletBreakpoint) {
				width: 100%;
			}
		}

	}

/*-------------------
     String Info
--------------------*/

	#group4.parallax__group {
		height: 700px;
	}
	
	#group4 {

		.parallax__layer--base {
			height: 700px;
		}

		.parallax__layer--back {
			height: 100vh;
			background: @bluegrad;
		}

		.parallax__layer--back::after {
			content: "";			
			background: url(themes/string/assets/parallax_image_2.png) no-repeat center center;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
			opacity: 0.1;
			top: 0;
			left: 0;
			bottom: 0;
			right: 0;
			position: absolute;
			z-index: -1;		
		}

		.header {
			h1 {
				text-align: center;
				margin-bottom: 2em;
			}
		} // Header

		.first-string {
			margin-bottom: 7rem;

		}

		.second-string {
			margin-bottom: 5rem;
		}

		.ui.grid > .line::after {
			content: "";			
			visibility: visible;
			border: 2px solid rgba(255, 255, 255, 1);;
			top: 50%;
			left: 80px;
			bottom: 0;
			right: 80px;
			position: absolute;
			z-index: -2;
		}

		.column {
  			p {
				display: flex;
				justify-content: center;
				flex-direction: column;
				height: 5em;
  				text-align: center;
				padding: 0 5em;

				@media only screen and (max-width: @computerBreakpoint) and (min-width: @tabletBreakpoint) {
					padding: 0 1em;
				}

				@media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
					padding: 0 2em;
				}

  				span {
  					font-size: 0.8em;
  					line-height: 1.4em;
  				}
  			}
  		}

		.dots-bg::after {
			content: "";
			position: absolute;
			z-index: -1;
			width: 200px;
			height: 200px;
			top: 50%;
			left: 50%;
			bottom: 0;
			right: 0;
			-webkit-transform: translate(-50%, -50%);
			transform: translate(-50%, -50%);
		}
		
		.hex::after {
			background: url(themes/string/assets/dot-bg-hex.svg) no-repeat center center;
			background-size:100%;

			// @media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
			// 	background-size:80%;
			// }
		}

		.circle::after {
			background: url(themes/string/assets/dot-bg-circle.svg) no-repeat center center;
			background-size: 100%;

			// @media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
			// 	background-size:80%;
			// }
		}

		.square::after {
			background: url(themes/string/assets/dot-bg-sqaure.svg) no-repeat center center;
			background-size: 100%;

			// @media only screen and (max-width: @largeMonitorBreakpoint) and (min-width: @computerBreakpoint) {
			// 	background-size:75%;
			// }
		}
	}

/*-------------------
     Registration
--------------------*/


	#group5 {
		text-align: center;

		.parallax__layer--base {
			background: @bluegrad;
			-webkit-box-shadow: 0px -3px 20px 2px rgba(33,51,59,0.5);
