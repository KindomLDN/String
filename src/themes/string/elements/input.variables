/*-------------------
      Element
--------------------*/

@textAlign: center;
@background: #b7c7cc;
@borderWidth: 0;

@inputColor: @darkblue;

/*-------------------
        States
--------------------*/

/* Placeholder */
@placeholderColor: @unselectedTextColor;
